<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/runner</property>
		<property name="hibernate.connection.characterEncoding">UTF-8</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		

		<mapping class="com.jerrymice.runner.entity.Users" />
		<mapping class="com.jerrymice.runner.entity.Information" />
		 <mapping class="com.jerrymice.runner.entity.Chatrecord" />
		 
		<mapping class="com.jerrymice.runner.entity.Commentaryrecord" />
		
		<mapping class="com.jerrymice.runner.entity.Notices" />
		<mapping class="com.jerrymice.runner.entity.Systemnotices" />
		
		<mapping class="com.jerrymice.runner.entity.Transactionrecord" />
		
		
		<mapping class="com.jerrymice.runner.entity.Orders"/>
		
		<mapping class="com.jerrymice.runner.entity.Station"/>
		
		 
	</session-factory>
</hibernate-configuration>
